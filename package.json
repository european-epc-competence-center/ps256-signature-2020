{
  "name": "@eecc/ps256-signature-2020",
  "version": "1.0.0",
  "description": "PS256Signature2020 Linked Data Proof suite for use with jsonld-signatures using RSASSA-PSS with SHA-256.",
  "type": "module",
  "exports": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "test": "npm run test-node",
    "test-node": "cross-env NODE_ENV=test NODE_OPTIONS='--loader ts-node/esm' mocha --preserve-symlinks -t 30000 -A -R ${REPORTER:-spec} test/*.spec.ts",
    "coverage": "cross-env NODE_ENV=test c8 npm run test-node",
    "coverage-ci": "cross-env NODE_ENV=test c8 --reporter=lcovonly --reporter=text-summary --reporter=text npm run test-node",
    "coverage-report": "c8 report",
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "lint": "tsc --noEmit",
    "release": "node scripts/release.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/european-epc-competence-center/ps256-signature-2020.git"
  },
  "author": "Christian Fries",
  "license": "BSD-3-Clause",
  "engines": {
    "node": ">=18"
  },
  "bugs": {
    "url": "https://github.com/european-epc-competence-center/ps256-signature-2020/issues"
  },
  "homepage": "https://github.com/european-epc-competence-center/ps256-signature-2020#readme",
  "dependencies": {
    "base58-universal": "^2.0.0",
    "jsonld": "^5.2.0",
    "jsonld-signatures": "^11.3.0"
  },
  "devDependencies": {
    "@digitalbazaar/security-document-loader": "^3.1.0",
    "@types/chai": "^4.3.16",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.12.12",
    "c8": "^10.1.2",
    "chai": "^4.3.4",
    "cross-env": "^7.0.3",
    "jose": "^5.4.0",
    "mocha": "^10.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  }
}
